<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ChatSync" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_200</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">5000</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.ChatSync</item>
    </style>

</resources>